config {
    type: "view"
}

SELECT
  game_id,
  club_id,
  COUNT(${utils.is_yellow("description")}) AS yellow_cards,
  COUNT(${utils.is_red("description")}) AS red_cards
FROM
  football_bdo_inf.game_events AS ge
WHERE
  ge.type = "Cards" AND ge.game_id = 2218677
GROUP BY
  game_id,
  club_id
ORDER BY
  game_id
